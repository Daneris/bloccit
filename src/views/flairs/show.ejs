<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbarflairs.ejs %>

    <main class="container">
      <h1><%= flair.name %></h1>
      <form style="display:initial" action="/flairs/<%= flair.id %>/destroy" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>

      <p><%= flair.color %></p>


      <ul class="list-group">
        <% flair.posts.forEach((post) => { %>
          <li class="list-group-item">
            <a href="/flairs/<%= flair.id %>/posts/<%= post.id %>"> <%= post.title %> </a>
          </li>
          <% }) %>
 </ul>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
